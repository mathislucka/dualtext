{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Document",
    "description": "A document containing text.",
    "type": "object",
    "properties": {
        "corpus": {
            "description": "The corpus that the document belongs to.",
            "type": "integer",
            "exclusiveMinimum": 0
        },
        "content": {
            "description": "The content of the document.",
            "type": "string"
        },
        "document_meta": {
            "description": "Meta data that should be added for the document.",
            "type": ["array", "object", "string"]
        }
    },
    "required": [ "content" ]
}